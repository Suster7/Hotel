<Window x:Class="RezervacijaHotela.Forme.FrmTipApartmana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RezervacijaHotela.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni naziv tipa apartmana" Height="200" Width="300">
    <Grid>
        <Label Content="Naziv tipa apartmana:" HorizontalAlignment="Left" Margin="18,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNazivTipaApartmana" HorizontalAlignment="Left" Margin="157,20,0,0" Text="" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="180,120,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click"/>
    </Grid>
</Window>
