<Window x:Class="RezervacijaHotela.Forme.FrmPlacanje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RezervacijaHotela.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni plaćanje" Height="200" Width="300">
    <Grid>
        <Label Content="Status plaćanja:" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="180,120,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click"/>
        <Label Content="Način plaćanja:" HorizontalAlignment="Left" Margin="30,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNacinPlacanja" HorizontalAlignment="Left" Margin="135,62,0,0" Text="" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <CheckBox x:Name="cbxStatusPlacanja" Content="" HorizontalAlignment="Left" Margin="186,30,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
